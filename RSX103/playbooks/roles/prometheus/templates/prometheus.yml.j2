global:
  scrape_interval: 15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
    - static_configs:
        - targets:
          - alertmanager:9093

rule_files:
  - "/etc/prometheus/alert_rules.yml"

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'docker'
    static_configs:
      - targets: ['{{ ansible_default_ipv4.address }}:9323']

  - job_name: 'node-exporter'
    static_configs:
      - targets: ['{{ ansible_default_ipv4.address }}:9100']

  - job_name: 'grafana'
    static_configs:
      - targets: ['{{ grafana_container_name }}:3000']
